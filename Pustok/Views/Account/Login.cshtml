@model UserLoginVm
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
					<form method="post" asp-action="login" asp-controller="account">
						<div class="login-form">
							<h4 class="login-title">Returning Customer</h4>
							<p><span class="font-weight-bold">I am a returning customer</span></p>
							<div class="row">
								<div class="col-md-12 col-12 mb--15">
									<label asp-for="Username">Enter Username...</label>
									<input asp-for="Username" class="mb-0 form-control" 
										   placeholder="Enter your username...">
										   <span asp-validation-for="Username" class="text-danger"></span>
								</div>
								<div class="col-12 mb--20">
									<label asp-for="Password">Password</label>
									<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="col-md-12">
									<button type="submit" class="btn btn-outlined">Login</button>
								</div>
							</div>
						</div>
					</form>
				</div>

		</div>
	</div>
</main>
	</div>
