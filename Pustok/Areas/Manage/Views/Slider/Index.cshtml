@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<div class="container" style="display:flex; align-items:center; margin-left:10px">
    <h1>Sliders</h1>
    <a asp-action="create" asp-controller="slider" class="btn btn-success" style="margin-left: 20px;">Create</a>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">AuthorName</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>

                <th scope="col">Order</th>

                <th scope="col">Img</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in ViewBag.Sliders)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Id</td>
                    <td>@slider.AuthorName</td>
                    <td>@slider.Title</td>
                    <td>@slider.Price</td>
                    <td><img style="width:100px" src="~/uploads/slider/@slider.Img" alt=""></td>
                    <td>@slider.Order</td>

                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-info">Update</a>
                        <a asp-action="Delete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


