@model List<Feature>

@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<div class="container" style="display:flex; align-items:center; margin-left:10px">
    <h1>Features</h1>
    <a asp-action="create" asp-controller="Feature" class="btn btn-success" style="margin-left: 20px;">Create</a>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">Icon</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Feature feature in ViewBag.Features)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@feature.Id</td>
                    <td>@feature.Title1</td>
                    <td>@feature.Title2</td>
                    <td>@feature.Icon</td>

                    <td>
                        <a asp-action="update" asp-controller="Feature" asp-route-id="@feature.Id" class="btn btn-info">Update</a>
                        <a asp-action="Delete" asp-controller="Feature" asp-route-id="@feature.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


