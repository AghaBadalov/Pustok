            </div>
            <div class="mb-3 col-md-2">
                <label asp-for="Title2" class="form-label">Title2</label>
                <input asp-for="Title2" class="form-control" placeholder="Title2">
                <span asp-validation-for="Title2" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-2">
                <label asp-for="Icon" class="form-label">Icon</label>
                <input asp-for="Icon" class="form-control" placeholder="Icon">
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
